{
  "manifest_version": 3,
  "name": "Datadog Sales Engineering Toolkit v2.0",
  "version": "2.0.0",
  "description": "Chrome Extension toolkit for Datadog Sales Engineers to enhance demonstrations and streamline access to resources",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webRequest",
    "notifications"
  ],
  "host_permissions": [
    "https://api.datadoghq.com/*",
    "https://api.datadoghq.eu/*",
    "https://api.ddog-gov.com/*",
    "https://api.us3.datadoghq.com/*",
    "https://api.us5.datadoghq.com/*",
    "https://api.ap1.datadoghq.com/*",
    "http://localhost:*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Datadog Sales Engineering Toolkit",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
} 